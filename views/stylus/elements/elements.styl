[class*="__tick"]
    min-width 16px
    min-height @min-width 
    justify-content center
    align-items center
    position relative
    padding 0.3em 
    border-radius 2px
    font-size 0.7rem
    font-weight 700
    color $white
    background-color $main__Color--accent

.title
    background-color $white
    padding 2em
    flex-direction row !important
    align-items center
    height 6rem
    
    h1
    h2
        display flex
        flex 1
        
.title--secondary
    @extend .title
    height 5rem
    letter-spacing 1px
    margin 1em 0
            
.tab--element__nav
    padding 1.07em 0
    
.tab--element__link
    padding 1em
    font-weight 700
    color $gray + 30%
    
    &:hover
        color $main__Color
    
.tab--element__link--active
    @extend .tab--element__link
    background-color $white
    border 1px solid $tertiary__Color--gray
    border-bottom none
    border-radius 5px 5px 0 0
    color $main__Color

.tab--element__content
    padding 2em 1em
    background-color $white
    border 1px solid $tertiary__Color--gray
    border-radius 0 5px 5px 5px
    
    p
        padding 0.2em
        color $gray + 30%

.spinner 
    width 50px
    text-align center

.spinner > div 
    width 10px
    height @width
    background-color $secondary__Color--available
    margin 0 0.2em
    border-radius 100%
    display inline-block
    animation bouncedelay 1.4s infinite ease-in-out
    /* Prevent first frame from flickering when animation starts */
    animation-fill-mode both


.spinner .bounce1 
  animation-delay -0.32s


.spinner .bounce2 
  animation-delay -0.16s


@-webkit-keyframes bouncedelay 
    0%
    80%
    100%  
        transform scale(0.0) 
    40%  
        transform scale(1.0) 

// Scroll bar styling

main::-webkit-scrollbar 
  width 6px
  height 6px

main::-webkit-scrollbar-track 
  border-radius 10px
  background transparent

main::-webkit-scrollbar-thumb
  border-radius 10px
  background rgba(0,0,0,0.2)

main::-webkit-scrollbar-thumb:hover
    background rgba(0,0,0,0.4)

main::-webkit-scrollbar-thumb:active
    background rgba(0,0,0,.9)
