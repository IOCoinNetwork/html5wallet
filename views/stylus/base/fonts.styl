// Regular text fonts 

@font-face
	font-family 'Open Sans'
	src url('../fonts/regular/OpenSans-Light.ttf')
	font-weight 300
	
@font-face
	font-family 'Open Sans'
	src url('../fonts/regular/OpenSans-Regular.ttf')
	font-weight 400

@font-face
	font-family 'Open Sans'
	src url('../fonts/regular/OpenSans-Semibold.ttf')
	font-weight 600

@font-face
	font-family 'Open Sans'
	src url('../fonts/regular/OpenSans-Bold.ttf')
	font-weight 700
	
@font-face
	font-family 'Open Sans'
	src url('../fonts/regular/OpenSans-ExtraBold.ttf')
	font-weight 800


$font = 14px\/1 'Open Sans', sans-serif

h1
h2
h3
h4
	color $white - 30%
	font-size 2.7vw
	font-weight 300
	letter-spacing 1px

h2
	font-size 2vw

h3
	font-size 1.3rem
	letter-spacing normal

h4
	font-size 1rem
	letter-spacing normal